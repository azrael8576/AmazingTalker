<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--disable狀態-->
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
            <solid android:color="@color/amazingtalker_gray_50" />
            <stroke android:width="1dp" android:color="@color/amazingtalker_black" />
        </shape>
    </item>

    <!--一般狀態-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp" android:topLeftRadius="12dp" android:topRightRadius="12dp" />
            <solid android:color="@color/amazingtalker_green_500" />
        </shape>
    </item>

</selector>