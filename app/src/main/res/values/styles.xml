<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 修改tablayout的背景色，提示线的颜色，字体颜色等-->
    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@android:color/white</item>
        <item name="tabIndicatorColor">@color/amazingtalker_green_900</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--共用 水平分隔線淺灰-->
    <style name="horizontal_split_light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/amazingtalker_gray_50</item>
    </style>

</resources>